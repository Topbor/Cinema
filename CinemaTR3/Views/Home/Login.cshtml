
@{
    ViewBag.Title = "Login";
}

<div style="margin-top:150px;" tabindex="-1"  aria-labelledby="exampleModalCenteredLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenteredLabel">Fill this login form</h5>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group k">
                        <label for="Login">Login</label>
                        <input name="Login" type="text" class="form-control" id="Login" placeholder="Your Login">
                    </div>
                    <div class="form-group k">
                        <label for="Password">Password</label>
                        <input name="Password" type="password" class="form-control" id="Password" placeholder="Your Password">
                    </div>
                </div>
                <p style="text-align:center;">Don't have an account? <a href="Registration">Register new now</a></p>
                <div class="modal-footer">
                    <a class="btn btn-secondary" href="Index">Close</a>
                    <button type="submit" class="btn btn-primary mb-2">Log in</button>
                </div>
            </form>
            
        </div>
    </div>
</div>

