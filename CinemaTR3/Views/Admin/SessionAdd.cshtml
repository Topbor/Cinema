
@{
    ViewBag.Title = "SessionAdd";
}


<h2 class="p-3" style="text-align:center;">Adding of a new session</h2>

<form method="post">
    <div class="form-group k">
        <label for="FilmId">Choose film</label>
        <select name="FilmId" class="form-control" id="FilmId">
            @foreach (var p in ViewBag.Films)
            {
                if (p.ShowStaus == 1 && p.StartDate<=DateTime.Today && p.FinishDate >= DateTime.Today)
                {
                    <option value="@p.Id">@p.Title</option>
                }

            }

        </select>
    </div>
    <div class="form-group k">
        <label for="HallId">Choose Hall</label>
        <select name="HallId" class="form-control" id="HallId">
            @foreach (var p in ViewBag.Halls)
            {              
                    <option value="@p.Id">@p.Name</option>
            }

        </select>
    </div>
    <div class="form-group k">
        <label for="Price">Price per ticket</label>
        <input name="Price" type="number" class="form-control" id="Price" placeholder="Price">
        <input name="ShowStatus" type="hidden" class="form-control" value=1>
    </div>
    <div class="form-group k">
        <label for="DateTime">Choose a time for your appointment:</label>
        <input type="datetime-local" id="DateTime"
               name="DateTime" value="@DateTime.Now">
    </div>
    <div class="form-group k">
        <button style="margin-top:20px;" type="submit" class="btn btn-primary mb-2">Confirm</button>
    </div>
</form>

